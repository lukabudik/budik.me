{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "module": "ESNext",
    "include": ["src", "vite.config.ts"],
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "types": ["vite/client", "vite-plugin-vue-layouts/client"],
    "paths": { "@/*": ["src/*"] }
  },
  "exclude": ["dist", "node_modules"]
}
